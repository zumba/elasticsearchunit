    "type": "library",
    "keywords": [
        "database",
        "testing",
        "elasticsearch",
        "elasticsearchclient"
    ],
    "homepage": "https://github.com/zumba/elasticsearchunit",
    "license": "MIT",
    "authors": [
        {
            "name": "Julian Castaneda",
            "email": "julian.castaneda@zumba.com",
            "role": "Developer"
        },
        {
            "name": "Chris Saylor",
            "email": "christopher.saylor@zumba.com",
            "role": "lead"
        }
    ],
    "support": {
        "issues": "https://github.com/zumba/elasticsearchunit/issues"
    },
    "require": {
        "php": ">=5.4.0",
        "ext-curl": "*"
    },
    "require-dev": {
    	"phpunit/phpunit": "~4.0",
        "elasticsearch/elasticsearch": "~5.1"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Zumba\\PHPUnit\\Extensions\\ElasticSearch\\": "src/"
        }
    }
}
